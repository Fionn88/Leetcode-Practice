class Solution:
    def longestConsecutive(self, nums: List[int]) -> int:
        if len(set(nums)) == 0:
            return 0
        elif len(set(nums)) == 1:
            return 1
        else:
            nums = sorted(set(nums))
            print(nums)
        
        L = []

        for index,value in enumerate(nums):
            if index == 0:
                count = 1
                L.append(count)
                current = value
            elif current + 1 == value:
                count += 1
                L.append(count)
                current = value
            else:
                current = value
                count = 1
                L.append(count)
        return max(L)